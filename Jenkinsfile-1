pipeline{
    agent any

    tools {
        nodejs "node"
    }

    stages {
        stage('Clone Repo'){
            steps{
                script {
                    git branch: 'main',
                    url: 'https://github.com/widmert-bzz/firstJenkinsSteps.git'
                }
            }
        }
        stage('Install Jest'){
            steps{
                sh 'npm i jest-cli -g'
            }
        }
        stage('Install Dependencies'){
            steps{
                sh 'npm i'
            }
        }
        stage('Test'){
            steps{
                sh 'npm test'
            }
        }
    }
}